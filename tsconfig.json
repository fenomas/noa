{
    // inputs
    "include": [
        "src/index.js",
        "src/components/*.js",
    ],
    "exclude": [
        "node_modules",
    ],
    "compilerOptions": {
        // output
        "outDir": "./dist",
        "target": "es5",
        "declaration": true,
        "emitDeclarationOnly": true,
        "rootDir": ".",
        // settings
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2018"
        ],
        "typeRoots": [
            "./types",
        ],
        // "moduleResolution": "Node",
        // "downlevelIteration": true,
        // "useDefineForClassFields": false,
    },
    "typeAcquisition": {
        "exclude": [
            "@types/gl-vec3", // automatic types are both wrong and out of date
        ]
    },
    "typedocOptions": {
        "entryPoints": [
            "src/index.js",
            "src/lib/",
            "src/components/movement.js",
            "src/components/physics.js",
            "src/components/position.js",
        ],
        "entryPointStrategy": "expand",
        "excludeInternal": true,
        "name": "noa API reference",
        "includeVersion": true,
        "out": "docs/API",
        "disableSources": true,
        "readme": "docs/api-header.md",
        "intentionallyNotExported": [
            "ECS",
            "EventEmitter",
            "MovementState",
            "PhysicsState",
            "PositionState",
            "RigidBody",
        ]
    },
}